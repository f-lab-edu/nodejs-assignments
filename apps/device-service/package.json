{
  "name": "device-service",
  "version": "0.0.1",
  "description": "Netflix Clone Device Service",
  "scripts": {
    "start": "nest start device-service",
    "start:dev": "nest start device-service --watch",
    "start:debug": "nest start device-service --debug --watch",
    "start:prod": "node dist/apps/device-service/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  }
}